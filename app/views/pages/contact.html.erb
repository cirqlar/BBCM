<%= form_for(:pages, url: send_path) do |f| %>

  <fieldset>
    <%= f.label :sender, "Name" %>
    <%= f.text_field :sender %>
  </fieldset>

  <fieldset>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </fieldset>

  <fieldset>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </fieldset>

  <fieldset>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </fieldset>

  <%= f.submit "Send email" %>
<% end %>
