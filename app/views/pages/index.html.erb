<div id="slideCont">
  <div id="slider" style="height: <%= @slides.length * 100 %>%; top: 0;">
    <%= render @slides, height: 100.0 / @slides.length %>
  </div>
</div>

<div class="medias">
  <h3>Our messages</h3>
  <div class="mediasCont cf">
    <% @messages.each do |message| %>
      <%= link_to render(message), show_message_path(:id => message), style: "background-image: url(#{message.poster.thumb.url})", class: 'medias' %>
    <% end %>
  </div>
  <%= link_to "View All Messages", messages_path, class: 'linkBtn' %>
</div>

<div id="serviceCont">
  <div id="servicer" style="height: 400%; top: 0;">
    <div class="service" style="background-image: url(/img/worship.jpg); height: 25%;">
      <h3>Come worship with us.<br><span>Every Sunday @9:00am.<br>No. 28 Owokoniran street, Surulere, Lagos.</span></h3>
    </div>
    <div class="service" style="background-image: url(/img/prayer.jpg); height: 25%;">
      <h3>Workers Prayer Meeting<br><span>Join us Sunday @7:30am for an uplifting prayer session.<br>No. 28 Owokoniran street, Surulere, Lagos.</span></h3>
    </div>
    <div class="service" style="background-image: url(/img/school.jpg); height: 25%;">
      <h3>Learn about GOD<br><span>Join us every Sunday @8:00am for the Sunday School<br>No. 28 Owokoniran street, Surulere, Lagos.</span></h3>
    </div>
    <div class="service" style="background-image: url(/img/teaching.jpg); height: 25%;">
      <h3>Teaching and Deliverance<br><span>Tuesdays @5:30pm come and receive GOD's word for you.<br>No. 28 Owokoniran street, Surulere, Lagos.</span></h3>
    </div>
  </div>
</div>

<div class="medias">
  <h3>Our gallery</h3>
  <div class="mediasCont cf">
    <% @images.each do |image| %>
      <%= link_to render(image), image, style: "background-image: url(#{image.image.thumb.url})", class: 'medias' %>
    <% end %>
  </div>
  <%= link_to "View Our Gallery", gallery_path, class: 'linkBtn' %>
</div>

<div class="cf" id="sub">
  <%= render 'subscribers/form' %>
</div>
