    <tr>
        <td align="center" style="font-size:16px; color:#848484;"><font face="'Athiti', Arial, sans-serif"><span style="color:rgb(56,195,0); font-size:24px;"><%= @an.title.split.map(&:capitalize).join(' ') %></span><br />
            <br />
            <span style="font-size:16px;"><%= simple_format @an.desc %></span></font>
        </td>
    </tr>
</table>

