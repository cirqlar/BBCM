<%= form_for(:session, url: login_path) do |f| %>
  <h3>Login</h3>

  <fieldset>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </fieldset>

  <fieldset>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </fieldset>
  <%= link_to "Forgot Password?", new_password_reset_path %>

  <%= f.submit "Login" %>
<% end %>
