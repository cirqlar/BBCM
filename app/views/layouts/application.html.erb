<!DOCTYPE html>
<html>
  <head>
    <title>BBCM</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div id="bodyCont">
      <div id="flash">
        <% flash.each do |type, msg| %>
          <p class="<%= type %>">
            <%= msg %>
          </p>
        <% end %>
      </div>

      <%= yield %>
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>
