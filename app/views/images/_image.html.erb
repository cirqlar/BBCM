<div class="image">
  <%= content_tag :div, "", style: "background-image: url(#{image.image.url})", class: "img" %>
  <div class="details">
    <span class="event"><%= image.event %></span>
    <span class="people"><%= image.people %></span>
    <span class="date"><%= image.updated_at %></span>
  </div>
  <%= link_to "delete", image, method: :delete, data: {confrim: "Are you sure?"} %>
</div>
