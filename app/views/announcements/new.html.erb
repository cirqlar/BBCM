<%= form_for(@an) do |f| %>
  <%= render 'shared/form_top' %>

  <%= render 'shared/errors', object: f.object %>

  <fieldset>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </fieldset>

  <fieldset>
    <%= f.label :desc %>
    <%= f.text_area :desc %>
  </fieldset>

  <fieldset>
    <%= f.label :expires_at %>
    <%= f.date_select :expires_at %>
  </fieldset>

  <%= f.submit "Save Announcement" %>
<% end %>
