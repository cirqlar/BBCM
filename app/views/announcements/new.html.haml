= form_for(@an) do |f|
  = render 'shared/form_top'
  = render 'shared/errors', object: f.object
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :desc
    = f.text_area :desc
  .field
    = f.label :expires_at
    = f.date_select :expires_at
  = f.submit "Save Announcement"
