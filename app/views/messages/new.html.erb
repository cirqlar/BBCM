<<%= form_for(@message, html: {multipart: true}) do |f| %>
  <%= render 'shared/form_top' %>

  <%= render 'shared/errors', object: f.object %>

  <fieldset>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </fieldset>

  <fieldset>
    <%= f.label :description, "Info" %>
    <%= f.text_area :description %>
  </fieldset>

  <fieldset>
    <%= f.label :tag_list, "Tags" %>
    <%= f.text_field :tag_list, value: @message.tag_list ? @message.tag_list.join(", ") : "" %>
  </fieldset>

  <fieldset>
    <%= f.label :poster %>
    <%= f.file_field :poster %>
  </fieldset>

  <fieldset>
    <%= f.label :media %>
    <%= f.file_field :media %>
  </fieldset>

  <%= f.submit "Save Message" %>
<% end %>
