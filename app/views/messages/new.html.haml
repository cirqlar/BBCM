= form_for(@message, html: {multipart: true}) do |f|
  = render 'shared/form_top'
  = render 'shared/errors', object: f.object
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description, "Info"
    = f.text_area :description
  .field
    = f.label :tag_list, "Tags"
    = f.text_field :tag_list, value: @message.tag_list ? @message.tag_list.join(", ") : ""
  .field
    = f.label :poster
    = f.file_field :poster
  .field
    = f.label :media
    = f.file_field :media
  = f.submit "Save Message"
